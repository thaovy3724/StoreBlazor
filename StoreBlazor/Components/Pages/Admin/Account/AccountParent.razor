@page "/admin/account"
@layout AdminLayout
@inject IAccountService service
@inherits BaseParent<User>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Quản lý Tài khoản</h3>
    </div>

    <AccountSearch @bind-KeyWord="@keyword"
                   OnSearch="LoadPageAsync" />

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light thead-separator">
                        <tr class="text-center">
                            <th style="width:80px;">ID</th>
                            <th>Tên tài khoản</th>
                            <th>Họ và tên</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                            <th style="width:150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="accountTableBody">
                        @if (listResult != null && listResult.Any())
                        {
                            foreach (var item in listResult)
                            {
                                <tr class="text-center" data-id="@item.UserId">
                                    <td>@($"TK{item.UserId}")</td>
                                    <td class="text-start">@item.Username</td>
                                    <td class="text-start">@(item.FullName ?? "")</td>
                                    <td>
                                        <span class="badge @GetRoleBadgeClass(item.Role)">
                                            @GetRoleText(item.Role)
                                        </span>
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-light border me-1 btn-edit"
                                                title="Sửa"
                                                data-bs-toggle="modal"
                                                data-bs-target="#accountModal"
                                                @onclick="()=>OpenEditForm(item)">
                                            <i class="bi bi-pencil text-success"></i>
                                        </button>
                                        <button class="btn btn-sm btn-light border btn-delete"
                                                title="Xóa"
                                                @onclick="() => HandleDeleteAsync(item)">
                                            <i class="bi bi-trash text-danger"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Chưa có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <Pagination CurrentPage="@CurrentPage"
                        TotalPages="@TotalPages"
                        OnPageChange="LoadPageAsync" />
        </div>
    </div>
</div>

<AccountForm Model="@SelectedItem"
             IsEditMode="@IsEditMode"
             OnSave="HandleSaveAsync"
             OnClose="CloseForm" />

@code {
    // ==== VARIABLES ====
    private List<User> listResult = new();
    private ServiceResult serviceResult = new();
    private string keyword = string.Empty;

    // ==== LOAD DATA ====
    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync(1);
    }

    protected override async Task LoadPageAsync(int page)
    {
        PageResult<User> result = new();
        if (keyword == string.Empty)
        {
            result = await service.GetAllAccountAsync(page);
        }
        else
        {
            result = await service.SearchByNameAsync(keyword, page);
        }

        listResult = result.Items;
        CurrentPage = page;
        TotalPages = result.TotalPages;
    }

    // ==== OPEN FORM ====
    private void OpenEditForm(User item)
    {
        IsEditMode = true;
        SelectedItem = new User
            {
                UserId = item.UserId,
                Username = item.Username,
                FullName = item.FullName,
                Role = item.Role,
                Password = "" // Không load mật khẩu cũ
            };
    }

    // === SAVE DATA ====
    private async Task HandleSaveAsync(User model)
    {
        if (IsEditMode)
        {
            serviceResult = await service.UpdateAsync(model);
        }
        else
        {
            serviceResult = await service.CreateAsync(model);
        }
        await ShowAlertAsync(serviceResult);
        await LoadPageAsync(CurrentPage);
    }

    // ==== DELETE ====
    private async Task HandleDeleteAsync(User model)
    {
        if (!await ConfirmDeleteAsync()) return;

        serviceResult = await service.DeleteAsync(model);
        await ShowAlertAsync(serviceResult);

        await LoadPageAsync(CurrentPage);
    }

    // ==== HELPER METHODS ====
    private string GetRoleBadgeClass(Role role)
    {
        return role switch
        {
            Role.Admin => "bg-danger",
            Role.Staff => "bg-primary",
            Role.Customer => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetRoleText(Role role)
    {
        return role switch
        {
            Role.Admin => "Admin",
            Role.Staff => "Nhân viên",
            Role.Customer => "Khách hàng",
            _ => "Không rõ"
        };
    }
}
