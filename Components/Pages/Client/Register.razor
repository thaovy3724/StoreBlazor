@page "/client/register"
@using StoreBlazor.Components.Layout.Client
@layout ClientLayout

<div class="container py-5">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-10 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">Tạo tài khoản mới</h3>
                        <p class="text-muted">Nhập thông tin của bạn để trải nghiệm mua sắm tốt nhất.</p>
                    </div>

                    <form>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="regName" placeholder="Nguyễn Văn A">
                                    <label for="regName"><i class="bi bi-person me-1"></i>Họ và tên</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control" id="regPhone" >
                                    <label for="regPhone"><i class="bi bi-telephone me-1"></i>Số điện thoại</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="regEmail" >
                                    <label for="regEmail"><i class="bi bi-envelope me-1"></i>Địa chỉ Email</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="regPass">
                                    <label for="regPass"><i class="bi bi-lock me-1"></i>Mật khẩu</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="regConfirmPass" >
                                    <label for="regConfirmPass"><i class="bi bi-check2-circle me-1"></i>Xác nhận mật khẩu</label>
                                </div>
                            </div>
                        </div>

                        <button type="button" class="btn btn-primary w-100 py-3 rounded-3 fw-bold shadow-sm">
                            ĐĂNG KÝ TÀI KHOẢN
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted small mb-0">
                            Bạn đã có tài khoản?
                            <a href="/client/login" class="text-primary fw-bold text-decoration-none">Đăng nhập ngay</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

