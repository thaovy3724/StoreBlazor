<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-3">
    @foreach (var p in displayedProducts)
    {
        <div class="col">
            <div class="card h-100 product-card border-0 shadow-sm bg-white rounded-3"
                 @onclick="() => OpenModal(p)"
                 style="cursor: pointer;">

                <div class="img-wrapper bg-light rounded-top-3 position-relative">
                    <img src="@p.ImageUrl" alt="@p.Name">
                </div>

                <div class="card-body d-flex flex-column p-3">
                    <h6 class="card-title product-title fw-semibold mb-2" title="@p.Name">
                        @p.Name
                    </h6>

                    <div class="mb-2">
                        @if (p.Stock > 0)
                        {
                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                Tồn kho: @p.Stock
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                                Hết hàng
                            </span>
                        }
                    </div>

                    <div class="mt-auto pt-2 border-top d-flex justify-content-between align-items-center">
                        <div>
                            <span class="d-block fw-bold text-primary fs-5">@p.Price.ToString("N0")đ</span>
                        </div>
                        <button class="btn btn-outline-primary btn-sm rounded-circle" title="Xem nhanh">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
