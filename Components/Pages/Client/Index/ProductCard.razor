<div class="col">
    <div class="card h-100 product-card border-0 shadow-sm bg-white rounded-3">

        <div class="img-wrapper bg-light rounded-top-3 position-relative">
            <img src="/uploads/@Model.ProductImage" alt="@Model.ProductName">
        </div>

        <div class="card-body d-flex flex-column p-3">
            <h6 class="card-title product-title fw-semibold mb-2" title="@Model.ProductName">
                @Model.ProductName
            </h6>

            <div class="mb-2">
                @if (Model.Quantity > 0)
                {
                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                        Tồn kho: @Model.Quantity
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                        Hết hàng
                    </span>
                }
            </div>

            <div class="mt-auto pt-2 border-top d-flex justify-content-between align-items-center">
                <div>
                    <span class="d-block fw-bold text-primary fs-5">@Model.Price.ToString("N0")đ</span>
                </div>
                <button class="btn btn-outline-primary btn-sm rounded-circle" 
                    title="Xem nhanh"
                    data-bs-toggle="modal"
                    data-bs-target="#productDetailModal"
                    @onclick="() => HandleOnViewDetail(Model)">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
        </div>
    </div>
</div>
@code{
    [Parameter]
    public ProductCardDTO Model { get; set; } = new ProductCardDTO();

    [Parameter]
    public EventCallback<ProductCardDTO> OnViewDetail { get; set; }

    private async Task HandleOnViewDetail(ProductCardDTO p)
    {
        await OnViewDetail.InvokeAsync(p);
    }
}