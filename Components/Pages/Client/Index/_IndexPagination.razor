<div class="mt-5 pb-5 d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)" aria-label="Previous">
                    <i class="bi bi-chevron-left"></i>
                </button>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageIndex = i;
                <li class="page-item @(currentPage == i ? "active" : "")">
                    <button class="page-link" @onclick="() => ChangePage(pageIndex)">
                        @i
                    </button>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)" aria-label="Next">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </li>

        </ul>
    </nav>
</div>
