    protected override async Task OnInitializedAsync()
    {
        // ==== CUSTOMER INFO ====
        // Lấy email từ session
        var email = await SessionStorage.GetItemAsync<string>("userEmail");

        if (!string.IsNullOrEmpty(email))
        {
            // Tìm Customer trong DB
            var customer = await CustomerService.GetByEmailAsync(email);

            if (customer != null)
            {
                // Đổ vào form
                FullName = customer.Name;
                PhoneNumber = customer.Phone;
                CustomerId = customer.CustomerId;
            }
        }

        // ==== CART INFO ====
        // Load giỏ hàng từ session
        await CartService.InitializeAsync();

        TotalQuantity = CartService.GetTotalQuantity();
        SubTotal = CartService.GetSubTotalAmount();
        Discount = CartService.GetPromotionAmount(SubTotal);
        Total = CartService.GetFinalAmount();

        // ==== PAYMENT METHOD ====
        PaymentMethodSelected = PaymentMethod.Cash;
        // Xử lý callback từ VNPay/MoMo
        // await HandlePaymentCallbackAsync();
    }

    //===== PAYMENT =====
    private async Task ProcessPayment(PaymentMethod paymentMethod)
    {
        OrderCreateClientDTO orderDTO = new OrderCreateClientDTO
        {
            UserId = await SessionStorage.GetItemAsync<int>("clientId"),
            CustomerId = CustomerId,
            PromoId = CartService.GetAppliedPromotion()?.PromoId,
            TotalAmount = Total,
            DiscountAmount = Discount,
            PaymentMethod = PaymentMethodSelected,
            Items = CartService.GetCart().Select(c => new OrderItemCreateClientDTO
            {
                ProductId = c.ProductId,
                Quantity = c.Quantity,
                ProductName = c.ProductName,
                Price = c.ProductPrice
            }).ToList()
        };

        var result = await OrderService.CreateOrderWithPaymentAsync(orderDTO);

        // if create order successfully, redirect to according pages
        if (result.Type == "success") Nav.NavigateTo(result.Message, true);
        else await JS.InvokeVoidAsync("showAlert", result.Message, result.Type);
    }

